{
  "name": "dev-panel",
  "displayName": "Dev Panel",
  "description": "âš¡ all-in-one command center for ai-assisted development",
  "icon": "resources/icon-colored.png",
  "version": "0.3.1",
  "packageManager": "pnpm@9.15.4",
  "publisher": "lucasvtiradentes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/dev-panel"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/dev-panel/issues"
  },
  "homepage": "https://github.com/lucasvtiradentes/dev-panel#readme",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai-assisted",
    "task-runner",
    "productivity",
    "developer-tools"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "scripts": {
    "prepare": "husky",
    "build": "tsx esbuild.config.ts",
    "postbuild": "tsx scripts/generate-schema.ts && tsx scripts/install-local/install-local-vscode.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies",
    "release": "echo 'Release triggered by changesets'",
    "clean": "rimraf out dist-dev node_modules",
    "knip": "knip",
    "schema": "tsx scripts/generate-schema.ts"
  },
  "dependencies": {
    "json5": "^2.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.93.0",
    "esbuild": "^0.24.0",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^15.2.11",
    "rimraf": "^6.0.1",
    "tscanner": "^0.1.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Dev Panel",
      "properties": {
        "devPanel.tasksLocation": {
          "type": "string",
          "enum": [
            "explorer",
            "devpanel"
          ],
          "default": "devpanel",
          "description": "Where to show the Tasks view (Explorer sidebar or Dev Panel sidebar)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devPanel",
          "title": "Dev Panel",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "devPanel": [
        {
          "id": "devPanelConfigs",
          "name": "Variables"
        },
        {
          "id": "devPanelReplacements",
          "name": "Replacements"
        },
        {
          "id": "devPanelExcludes",
          "name": "Excludes"
        },
        {
          "id": "devPanelTasksPanel",
          "name": "Task Runner",
          "icon": "$(tasklist)",
          "when": "config.devPanel.tasksLocation == devpanel"
        }
      ],
      "explorer": [
        {
          "id": "devPanelTasksExplorer",
          "name": "Task Runner",
          "icon": "$(tasklist)",
          "when": "config.devPanel.tasksLocation == explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "devPanel.selectConfigOption",
        "title": "Select Config Option"
      },
      {
        "command": "devPanel.resetConfigOption",
        "title": "Reset Config Option",
        "icon": "$(discard)"
      },
      {
        "command": "devPanel.toggleConfigsGroupMode",
        "title": "Toggle Configs Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "devPanel.toggleConfigsGroupModeGrouped",
        "title": "Toggle Configs Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "devPanel.toggleReplacement",
        "title": "Toggle Replacement"
      },
      {
        "command": "devPanel.toggleAllReplacementsActivate",
        "title": "Activate All Replacements",
        "icon": "$(circle-outline)"
      },
      {
        "command": "devPanel.toggleAllReplacementsDeactivate",
        "title": "Deactivate All Replacements",
        "icon": "$(circle-filled)"
      },
      {
        "command": "devPanel.toggleReplacementsGroupMode",
        "title": "Toggle Replacements Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "devPanel.toggleReplacementsGroupModeGrouped",
        "title": "Toggle Replacements Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "devPanel.addExclude",
        "title": "Add Exclude",
        "icon": "$(add)"
      },
      {
        "command": "devPanel.removeExclude",
        "title": "Remove Exclude",
        "icon": "$(trash)"
      },
      {
        "command": "devPanel.openExcludeFile",
        "title": "Open Exclude File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "devPanel.openTasksConfig",
        "title": "Open Tasks Config",
        "icon": "$(go-to-file)"
      },
      {
        "command": "devPanel.refresh",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "devPanel.switchTaskSource",
        "title": "Switch to npm Scripts",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "devPanel.switchTaskSourceFromPackage",
        "title": "Switch to DevPanel Tasks",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "devPanel.switchTaskSourceFromDevPanel",
        "title": "Switch to VSCode Tasks",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "devPanel.toggleGroupMode",
        "title": "Toggle Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "devPanel.toggleGroupModeGrouped",
        "title": "Toggle Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "devPanel.toggleFavorite",
        "title": "Add to Favorites",
        "icon": "$(heart)"
      },
      {
        "command": "devPanel.toggleUnfavorite",
        "title": "Remove from Favorites",
        "icon": "$(heart-filled)"
      },
      {
        "command": "devPanel.toggleHide",
        "title": "Hide Task",
        "icon": "$(eye-closed)"
      },
      {
        "command": "devPanel.toggleUnhide",
        "title": "Unhide Task",
        "icon": "$(eye)"
      },
      {
        "command": "devPanel.toggleTasksShowHidden",
        "title": "Show Hidden Tasks",
        "icon": "$(eye)"
      },
      {
        "command": "devPanel.toggleTasksShowHiddenActive",
        "title": "Hide Hidden Tasks",
        "icon": "$(eye-closed)"
      },
      {
        "command": "devPanel.toggleTasksShowOnlyFavorites",
        "title": "Show Only Favorites",
        "icon": "$(heart)"
      },
      {
        "command": "devPanel.toggleTasksShowOnlyFavoritesActive",
        "title": "Show All Tasks",
        "icon": "$(heart-filled)"
      },
      {
        "command": "devPanel.openSettingsMenu",
        "title": "Open Settings Menu"
      },
      {
        "command": "devPanel.deleteTask",
        "title": "Delete Task"
      },
      {
        "command": "devPanel.goToReplacementTargetFile",
        "title": "Go to Replacement Target File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "devPanel.previewReplacementDiff",
        "title": "Preview Replacement Diff",
        "icon": "$(diff)"
      },
      {
        "command": "devPanel.showLogs",
        "title": "Dev Panel: Show Logs"
      },
      {
        "command": "devPanel.showWorkspaceState",
        "title": "Dev Panel: Show Workspace State"
      },
      {
        "command": "devPanel.clearWorkspaceState",
        "title": "Dev Panel: Clear Workspace State"
      },
      {
        "command": "devPanel.syncVariableKeybindings",
        "title": "Dev Panel: Sync Variable Keybindings"
      },
      {
        "command": "devPanel.setVariableKeybinding",
        "title": "Set Keybinding",
        "icon": "$(keyboard)"
      },
      {
        "command": "devPanel.openVariablesKeybindings",
        "title": "Open Configs Keybindings",
        "icon": "$(keyboard)"
      },
      {
        "command": "devPanel.openVariablesConfig",
        "title": "Open Variables Config",
        "icon": "$(go-to-file)"
      },
      {
        "command": "devPanel.syncTaskKeybindings",
        "title": "Dev Panel: Sync Task Keybindings"
      },
      {
        "command": "devPanel.setTaskKeybinding",
        "title": "Set Keybinding",
        "icon": "$(keyboard)"
      },
      {
        "command": "devPanel.openTasksKeybindings",
        "title": "Open Tasks Keybindings",
        "icon": "$(keyboard)"
      },
      {
        "command": "devPanel.executeTask",
        "title": "Execute Task"
      },
      {
        "command": "devPanel.goToTask",
        "title": "Go to Task"
      }
    ],
    "keybindings": [],
    "menus": {
      "commandPalette": [
        {
          "command": "devPanel.selectConfigOption",
          "when": "false"
        },
        {
          "command": "devPanel.resetConfigOption",
          "when": "false"
        },
        {
          "command": "devPanel.toggleConfigsGroupMode",
          "when": "false"
        },
        {
          "command": "devPanel.toggleConfigsGroupModeGrouped",
          "when": "false"
        },
        {
          "command": "devPanel.toggleReplacement",
          "when": "false"
        },
        {
          "command": "devPanel.toggleAllReplacementsActivate",
          "when": "false"
        },
        {
          "command": "devPanel.toggleAllReplacementsDeactivate",
          "when": "false"
        },
        {
          "command": "devPanel.toggleReplacementsGroupMode",
          "when": "false"
        },
        {
          "command": "devPanel.toggleReplacementsGroupModeGrouped",
          "when": "false"
        },
        {
          "command": "devPanel.addExclude",
          "when": "false"
        },
        {
          "command": "devPanel.removeExclude",
          "when": "false"
        },
        {
          "command": "devPanel.openExcludeFile",
          "when": "false"
        },
        {
          "command": "devPanel.openTasksConfig",
          "when": "false"
        },
        {
          "command": "devPanel.refresh",
          "when": "false"
        },
        {
          "command": "devPanel.switchTaskSource",
          "when": "false"
        },
        {
          "command": "devPanel.switchTaskSourceFromPackage",
          "when": "false"
        },
        {
          "command": "devPanel.switchTaskSourceFromDevPanel",
          "when": "false"
        },
        {
          "command": "devPanel.toggleGroupMode",
          "when": "false"
        },
        {
          "command": "devPanel.toggleGroupModeGrouped",
          "when": "false"
        },
        {
          "command": "devPanel.toggleFavorite",
          "when": "false"
        },
        {
          "command": "devPanel.toggleUnfavorite",
          "when": "false"
        },
        {
          "command": "devPanel.toggleHide",
          "when": "false"
        },
        {
          "command": "devPanel.toggleUnhide",
          "when": "false"
        },
        {
          "command": "devPanel.toggleTasksShowHidden",
          "when": "false"
        },
        {
          "command": "devPanel.toggleTasksShowHiddenActive",
          "when": "false"
        },
        {
          "command": "devPanel.toggleTasksShowOnlyFavorites",
          "when": "false"
        },
        {
          "command": "devPanel.toggleTasksShowOnlyFavoritesActive",
          "when": "false"
        },
        {
          "command": "devPanel.openSettingsMenu",
          "when": "false"
        },
        {
          "command": "devPanel.deleteTask",
          "when": "false"
        },
        {
          "command": "devPanel.goToReplacementTargetFile",
          "when": "false"
        },
        {
          "command": "devPanel.previewReplacementDiff",
          "when": "false"
        },
        {
          "command": "devPanel.setVariableKeybinding",
          "when": "false"
        },
        {
          "command": "devPanel.openVariablesKeybindings",
          "when": "false"
        },
        {
          "command": "devPanel.openVariablesConfig",
          "when": "false"
        },
        {
          "command": "devPanel.setTaskKeybinding",
          "when": "false"
        },
        {
          "command": "devPanel.openTasksKeybindings",
          "when": "false"
        },
        {
          "command": "devPanel.executeTask",
          "when": "false"
        },
        {
          "command": "devPanel.goToTask",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "devPanel.toggleConfigsGroupMode",
          "when": "view == devPanelConfigs && !configsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "devPanel.toggleConfigsGroupModeGrouped",
          "when": "view == devPanelConfigs && configsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "devPanel.openVariablesKeybindings",
          "when": "view == devPanelConfigs",
          "group": "navigation@3"
        },
        {
          "command": "devPanel.openVariablesConfig",
          "when": "view == devPanelConfigs",
          "group": "navigation@2"
        },
        {
          "command": "devPanel.toggleReplacementsGroupMode",
          "when": "view == devPanelReplacements && !replacementsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "devPanel.toggleReplacementsGroupModeGrouped",
          "when": "view == devPanelReplacements && replacementsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "devPanel.toggleAllReplacementsActivate",
          "when": "view == devPanelReplacements && !replacementsAllActive",
          "group": "navigation@2"
        },
        {
          "command": "devPanel.toggleAllReplacementsDeactivate",
          "when": "view == devPanelReplacements && replacementsAllActive",
          "group": "navigation@2"
        },
        {
          "command": "devPanel.addExclude",
          "when": "view == devPanelExcludes",
          "group": "navigation@1"
        },
        {
          "command": "devPanel.openExcludeFile",
          "when": "view == devPanelExcludes",
          "group": "navigation@2"
        },
        {
          "command": "devPanel.openTasksConfig",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel)",
          "group": "navigation@5"
        },
        {
          "command": "devPanel.toggleTasksShowOnlyFavorites",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && tasksHasFavorites && !tasksShowOnlyFavorites",
          "group": "navigation@2"
        },
        {
          "command": "devPanel.toggleTasksShowOnlyFavoritesActive",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && tasksHasFavorites && tasksShowOnlyFavorites",
          "group": "navigation@2"
        },
        {
          "command": "devPanel.toggleTasksShowHidden",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && tasksHasHidden && !tasksShowHidden",
          "group": "navigation@3"
        },
        {
          "command": "devPanel.toggleTasksShowHiddenActive",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && tasksHasHidden && tasksShowHidden",
          "group": "navigation@3"
        },
        {
          "command": "devPanel.openTasksKeybindings",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && taskSourceDevPanel",
          "group": "navigation@1"
        },
        {
          "command": "devPanel.toggleGroupMode",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && !tasksGrouped && tasksHasGroups",
          "group": "navigation@4"
        },
        {
          "command": "devPanel.toggleGroupModeGrouped",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && tasksGrouped && tasksHasGroups",
          "group": "navigation@4"
        },
        {
          "command": "devPanel.switchTaskSource",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && taskSourceVSCode",
          "group": "navigation@6"
        },
        {
          "command": "devPanel.switchTaskSourceFromPackage",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && taskSourcePackage",
          "group": "navigation@6"
        },
        {
          "command": "devPanel.switchTaskSourceFromDevPanel",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && taskSourceDevPanel",
          "group": "navigation@6"
        }
      ],
      "view/item/context": [
        {
          "command": "devPanel.toggleHide",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && viewItem =~ /^task/ && viewItem =~ /^((?!hidden).)*$/",
          "group": "1_common@1"
        },
        {
          "command": "devPanel.toggleUnhide",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && viewItem =~ /^task.*-hidden/",
          "group": "1_common@1"
        },
        {
          "command": "devPanel.toggleFavorite",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && viewItem =~ /^task/ && viewItem =~ /^((?!favorite).)*$/",
          "group": "1_common@2"
        },
        {
          "command": "devPanel.toggleUnfavorite",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && viewItem =~ /^task.*-favorite/",
          "group": "1_common@2"
        },
        {
          "command": "devPanel.goToTask",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel)",
          "group": "1_common@3"
        },
        {
          "command": "devPanel.deleteTask",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && viewItem =~ /^task-devpanel/",
          "group": "2_devpanel@1"
        },
        {
          "command": "devPanel.setTaskKeybinding",
          "when": "(view == devPanelTasksExplorer || view == devPanelTasksPanel) && viewItem =~ /^task/ && taskSourceDevPanel",
          "group": "2_devpanel@2"
        },
        {
          "command": "devPanel.previewReplacementDiff",
          "when": "view == devPanelReplacements && viewItem == replacementItem",
          "group": "inline@1"
        },
        {
          "command": "devPanel.goToReplacementTargetFile",
          "when": "view == devPanelReplacements && viewItem == replacementItem",
          "group": "inline@2"
        },
        {
          "command": "devPanel.setVariableKeybinding",
          "when": "view == devPanelConfigs && viewItem == variableItem"
        },
        {
          "command": "devPanel.resetConfigOption",
          "when": "view == devPanelConfigs && viewItem == variableItem",
          "group": "inline@1"
        },
        {
          "command": "devPanel.removeExclude",
          "when": "view == devPanelExcludes && viewItem == excludeItem",
          "group": "inline@1"
        }
      ],
      "view/item/inline": []
    },
    "submenus": [],
    "viewsWelcome": [
      {
        "view": "devPanelConfigs",
        "contents": "Loading variables...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelConfigs",
        "contents": "No variables configured.\n\nAdd variables in your config file.",
        "when": "!extensionInitializing"
      },
      {
        "view": "devPanelReplacements",
        "contents": "Loading replacements...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelReplacements",
        "contents": "No replacements configured.",
        "when": "!extensionInitializing"
      },
      {
        "view": "devPanelExcludes",
        "contents": "Loading excludes...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelExcludes",
        "contents": "No local excludes.",
        "when": "!extensionInitializing"
      },
      {
        "view": "devPanelTodos",
        "contents": "Loading branch tasks...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelTodos",
        "contents": "No tasks in current branch.",
        "when": "!extensionInitializing"
      },
      {
        "view": "devPanelTasksExplorer",
        "contents": "Loading tasks...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelTasksExplorer",
        "contents": "No tasks available.\n\nAdd tasks in your config file or package.json.",
        "when": "!extensionInitializing"
      },
      {
        "view": "devPanelTasksPanel",
        "contents": "Loading tasks...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelTasksPanel",
        "contents": "No tasks available.\n\nAdd tasks in your config file or package.json.",
        "when": "!extensionInitializing"
      },
      {
        "view": "devPanelChangedFiles",
        "contents": "Loading changed files...",
        "when": "extensionInitializing"
      },
      {
        "view": "devPanelChangedFiles",
        "contents": "No changed files in current branch.",
        "when": "!extensionInitializing"
      }
    ],
    "taskDefinitions": [
      {
        "type": "util"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "**/.devpanel/config.jsonc",
        "url": "./resources/schema.json"
      }
    ]
  }
}
