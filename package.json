{
  "name": "better-project-tools",
  "displayName": "Better Project Tools",
  "description": "VS Code extension to view and run tasks from Explorer pane",
  "icon": "resources/icon.png",
  "version": "0.0.1",
  "publisher": "lucasvtiradentes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/better-project-tools"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/better-project-tools/issues"
  },
  "homepage": "https://github.com/lucasvtiradentes/better-project-tools#readme",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tasks",
    "task-runner",
    "project-tools"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "scripts": {
    "prepare": "husky",
    "build": "tsx esbuild.config.ts",
    "postbuild": "tsx scripts/generate-schema.ts && tsx scripts/install-local/install-local-vscode.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies",
    "clean": "rimraf out dist-dev node_modules",
    "knip": "knip",
    "schema": "tsx scripts/generate-schema.ts"
  },
  "dependencies": {
    "json5": "^2.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.93.0",
    "esbuild": "^0.24.0",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^15.2.11",
    "rimraf": "^6.0.1",
    "tscanner": "^0.1.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "betterProjectTools",
          "title": "Better Project Tools",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "betterProjectTools": [
        {
          "id": "betterProjectToolsConfigs",
          "name": "Configs"
        },
        {
          "id": "betterProjectToolsReplacements",
          "name": "Replacements"
        },
        {
          "id": "betterProjectToolsTools",
          "name": "Tools"
        },
        {
          "id": "betterProjectToolsPrompts",
          "name": "Prompts"
        },
        {
          "id": "betterProjectToolsBranchContext",
          "name": "Branch Context"
        },
        {
          "id": "betterProjectToolsTodos",
          "name": "Todos"
        }
      ],
      "explorer": [
        {
          "id": "betterProjectToolsTasks",
          "name": "Task Runner",
          "icon": "$(tasklist)"
        }
      ]
    },
    "commands": [
      {
        "command": "betterProjectTools.selectConfigOption",
        "title": "Select Config Option"
      },
      {
        "command": "betterProjectTools.refreshConfigs",
        "title": "Refresh Configs",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.toggleConfigsGroupMode",
        "title": "Toggle Configs Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "betterProjectTools.toggleConfigsGroupModeGrouped",
        "title": "Toggle Configs Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "betterProjectTools.toggleReplacement",
        "title": "Toggle Replacement"
      },
      {
        "command": "betterProjectTools.revertAllReplacements",
        "title": "Revert All Replacements",
        "icon": "$(discard)"
      },
      {
        "command": "betterProjectTools.refreshReplacements",
        "title": "Refresh Replacements",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.toggleReplacementsGroupMode",
        "title": "Toggle Replacements Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "betterProjectTools.toggleReplacementsGroupModeGrouped",
        "title": "Toggle Replacements Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "betterProjectTools.executeTask",
        "title": "Execute"
      },
      {
        "command": "betterProjectTools.goToTask",
        "title": "Go to Definition"
      },
      {
        "command": "betterProjectTools.refresh",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.switchTaskSource",
        "title": "Switch to npm Scripts",
        "icon": "$(tools)"
      },
      {
        "command": "betterProjectTools.switchTaskSourceFromPackage",
        "title": "Switch to BPM Tasks",
        "icon": "$(package)"
      },
      {
        "command": "betterProjectTools.switchTaskSourceFromBPM",
        "title": "Switch to VSCode Tasks",
        "icon": "$(beaker)"
      },
      {
        "command": "betterProjectTools.toggleGroupMode",
        "title": "Toggle Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "betterProjectTools.toggleGroupModeGrouped",
        "title": "Toggle Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "betterProjectTools.toggleFavorite",
        "title": "Toggle Favorite",
        "icon": "$(heart)"
      },
      {
        "command": "betterProjectTools.toggleHide",
        "title": "Toggle Hide",
        "icon": "$(eye-closed)"
      },
      {
        "command": "betterProjectTools.execCmdline",
        "title": "Execute Command Line"
      },
      {
        "command": "betterProjectTools.exitCmdline",
        "title": "Exit Command Line"
      },
      {
        "command": "betterProjectTools.tabCmdline",
        "title": "Tab Command Line"
      },
      {
        "command": "betterProjectTools.refreshTools",
        "title": "Refresh Tools",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.toggleToolsGroupMode",
        "title": "Toggle Tools Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "betterProjectTools.toggleToolsGroupModeGrouped",
        "title": "Toggle Tools Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "betterProjectTools.toggleToolFavorite",
        "title": "Toggle Tool Favorite",
        "icon": "$(heart)"
      },
      {
        "command": "betterProjectTools.toggleToolHide",
        "title": "Toggle Tool Hide",
        "icon": "$(eye-closed)"
      },
      {
        "command": "betterProjectTools.executeTool",
        "title": "Execute Tool"
      },
      {
        "command": "betterProjectTools.refreshPrompts",
        "title": "Refresh Prompts",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.togglePromptsGroupMode",
        "title": "Toggle Prompts Group Mode",
        "icon": "$(list-flat)"
      },
      {
        "command": "betterProjectTools.togglePromptsGroupModeGrouped",
        "title": "Toggle Prompts Group Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "betterProjectTools.togglePromptFavorite",
        "title": "Toggle Prompt Favorite",
        "icon": "$(heart)"
      },
      {
        "command": "betterProjectTools.togglePromptHide",
        "title": "Toggle Prompt Hide",
        "icon": "$(eye-closed)"
      },
      {
        "command": "betterProjectTools.executePrompt",
        "title": "Execute Prompt"
      },
      {
        "command": "betterProjectTools.refreshBranchContext",
        "title": "Refresh Branch Context",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.editBranchObjective",
        "title": "Edit Branch Objective"
      },
      {
        "command": "betterProjectTools.editBranchLinearIssue",
        "title": "Edit Branch Linear Issue"
      },
      {
        "command": "betterProjectTools.editBranchNotes",
        "title": "Edit Branch Notes"
      },
      {
        "command": "betterProjectTools.showLogs",
        "title": "BPM: Show Logs"
      }
    ],
    "keybindings": [
      {
        "command": "betterProjectTools.execCmdline",
        "key": "Ctrl+Shift+.",
        "when": "!inCmdlineMode"
      },
      {
        "command": "betterProjectTools.exitCmdline",
        "key": "escape",
        "when": "inCmdlineMode"
      },
      {
        "command": "betterProjectTools.backCmdline",
        "key": "backspace",
        "when": "inCmdlineMode"
      },
      {
        "command": "betterProjectTools.tabCmdline",
        "key": "tab",
        "when": "inCmdlineMode"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "betterProjectTools.toggleConfigsGroupMode",
          "when": "view == betterProjectToolsConfigs && !configsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.toggleConfigsGroupModeGrouped",
          "when": "view == betterProjectToolsConfigs && configsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.refreshConfigs",
          "when": "view == betterProjectToolsConfigs",
          "group": "navigation@2"
        },
        {
          "command": "betterProjectTools.toggleReplacementsGroupMode",
          "when": "view == betterProjectToolsReplacements && !replacementsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.toggleReplacementsGroupModeGrouped",
          "when": "view == betterProjectToolsReplacements && replacementsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.revertAllReplacements",
          "when": "view == betterProjectToolsReplacements",
          "group": "navigation@2"
        },
        {
          "command": "betterProjectTools.refreshReplacements",
          "when": "view == betterProjectToolsReplacements",
          "group": "navigation@3"
        },
        {
          "command": "betterProjectTools.switchTaskSource",
          "when": "view == betterProjectToolsTasks && taskSourceVSCode",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.switchTaskSourceFromPackage",
          "when": "view == betterProjectToolsTasks && taskSourcePackage",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.switchTaskSourceFromBPM",
          "when": "view == betterProjectToolsTasks && taskSourceBPM",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.toggleGroupMode",
          "when": "view == betterProjectToolsTasks && !tasksGrouped",
          "group": "navigation@2"
        },
        {
          "command": "betterProjectTools.toggleGroupModeGrouped",
          "when": "view == betterProjectToolsTasks && tasksGrouped",
          "group": "navigation@2"
        },
        {
          "command": "betterProjectTools.refresh",
          "when": "view == betterProjectToolsTasks",
          "group": "navigation@3"
        },
        {
          "command": "betterProjectTools.toggleToolsGroupMode",
          "when": "view == betterProjectToolsTools && !toolsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.toggleToolsGroupModeGrouped",
          "when": "view == betterProjectToolsTools && toolsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.refreshTools",
          "when": "view == betterProjectToolsTools",
          "group": "navigation@2"
        },
        {
          "command": "betterProjectTools.togglePromptsGroupMode",
          "when": "view == betterProjectToolsPrompts && !promptsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.togglePromptsGroupModeGrouped",
          "when": "view == betterProjectToolsPrompts && promptsGrouped",
          "group": "navigation@1"
        },
        {
          "command": "betterProjectTools.refreshPrompts",
          "when": "view == betterProjectToolsPrompts",
          "group": "navigation@2"
        },
        {
          "command": "betterProjectTools.refreshBranchContext",
          "when": "view == betterProjectToolsBranchContext",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "betterProjectTools.toggleFavorite",
          "when": "view == betterProjectToolsTasks && viewItem == task",
          "group": "inline@1"
        },
        {
          "command": "betterProjectTools.toggleHide",
          "when": "view == betterProjectToolsTasks && viewItem == task",
          "group": "inline@2"
        },
        {
          "command": "betterProjectTools.executeTask",
          "when": "view == betterProjectToolsTasks"
        },
        {
          "command": "betterProjectTools.goToTask",
          "when": "view == betterProjectToolsTasks"
        },
        {
          "command": "betterProjectTools.toggleToolFavorite",
          "when": "view == betterProjectToolsTools && viewItem == tool",
          "group": "inline@1"
        },
        {
          "command": "betterProjectTools.toggleToolHide",
          "when": "view == betterProjectToolsTools && viewItem == tool",
          "group": "inline@2"
        },
        {
          "command": "betterProjectTools.executeTool",
          "when": "view == betterProjectToolsTools"
        },
        {
          "command": "betterProjectTools.togglePromptFavorite",
          "when": "view == betterProjectToolsPrompts && viewItem == prompt",
          "group": "inline@1"
        },
        {
          "command": "betterProjectTools.togglePromptHide",
          "when": "view == betterProjectToolsPrompts && viewItem == prompt",
          "group": "inline@2"
        },
        {
          "command": "betterProjectTools.executePrompt",
          "when": "view == betterProjectToolsPrompts"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "util"
      }
    ]
  }
}
