{
  "name": "better-project-tools",
  "displayName": "Better Project Tools",
  "description": "VS Code extension to view and run tasks from Explorer pane",
  "icon": "resources/icon.png",
  "version": "0.0.1",
  "publisher": "lucasvtiradentes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/better-project-tools"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/better-project-tools/issues"
  },
  "homepage": "https://github.com/lucasvtiradentes/better-project-tools#readme",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tasks",
    "task-runner",
    "project-tools"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "scripts": {
    "prepare": "husky",
    "build": "tsx esbuild.config.ts",
    "postbuild": "tsx scripts/install-local/install-local-vscode.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies",
    "clean": "rimraf out dist-dev node_modules"
  },
  "dependencies": {
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.93.0",
    "esbuild": "^0.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "betterProjectTools",
          "title": "Better Project Tools",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "betterProjectTools": [
        {
          "id": "betterProjectToolsHello1",
          "name": "Hello View 1"
        },
        {
          "id": "betterProjectToolsHello2",
          "name": "Hello View 2"
        }
      ],
      "explorer": [
        {
          "id": "betterProjectToolsTasks",
          "name": "Task Runner",
          "icon": "$(tasklist)"
        }
      ]
    },
    "commands": [
      {
        "command": "betterProjectTools.selectConfigOption",
        "title": "Select Config Option"
      },
      {
        "command": "betterProjectTools.toggleReplacement",
        "title": "Toggle Replacement"
      },
      {
        "command": "betterProjectTools.revertAllReplacements",
        "title": "Revert All Replacements",
        "icon": "$(discard)"
      },
      {
        "command": "betterProjectTools.executeTask",
        "title": "Execute"
      },
      {
        "command": "betterProjectTools.goToTask",
        "title": "Go to Definition"
      },
      {
        "command": "betterProjectTools.refresh",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "betterProjectTools.unhide",
        "title": "Hide/Unhide",
        "icon": "$(eye-closed)"
      },
      {
        "command": "betterProjectTools.showList",
        "title": "Filter",
        "icon": "$(extensions-filter)"
      },
      {
        "command": "betterProjectTools.execCmdline",
        "title": "Execute Command Line"
      },
      {
        "command": "betterProjectTools.exitCmdline",
        "title": "Exit Command Line"
      },
      {
        "command": "betterProjectTools.tabCmdline",
        "title": "Tab Command Line"
      }
    ],
    "keybindings": [
      {
        "command": "betterProjectTools.execCmdline",
        "key": "Ctrl+Shift+.",
        "when": "!inCmdlineMode"
      },
      {
        "command": "betterProjectTools.exitCmdline",
        "key": "escape",
        "when": "inCmdlineMode"
      },
      {
        "command": "betterProjectTools.backCmdline",
        "key": "backspace",
        "when": "inCmdlineMode"
      },
      {
        "command": "betterProjectTools.tabCmdline",
        "key": "tab",
        "when": "inCmdlineMode"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "betterProjectTools.revertAllReplacements",
          "when": "view == betterProjectToolsHello2",
          "group": "navigation"
        },
        {
          "command": "betterProjectTools.showList",
          "when": "view == betterProjectToolsTasks",
          "group": "navigation"
        },
        {
          "command": "betterProjectTools.unhide",
          "when": "view == betterProjectToolsTasks",
          "group": "navigation"
        },
        {
          "command": "betterProjectTools.refresh",
          "when": "view == betterProjectToolsTasks",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "betterProjectTools.executeTask",
          "when": "view == betterProjectToolsTasks"
        },
        {
          "command": "betterProjectTools.goToTask",
          "when": "view == betterProjectToolsTasks"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "util"
      }
    ]
  }
}
