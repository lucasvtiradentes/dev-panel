{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Project Panel configuration file",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "JSON Schema reference",
      "type": "string"
    },
    "settings": {
      "description": "Global settings",
      "type": "object",
      "properties": {
        "aiProvider": {
          "description": "AI provider to use for prompts: claude, gemini, or cursor-agent",
          "type": "string",
          "enum": [
            "claude",
            "gemini",
            "cursor-agent"
          ]
        },
        "promptExecution": {
          "description": "Execution mode for prompts with saveOutput: \"timestamped\" creates new file each time with timestamp, \"overwrite\" replaces previous file",
          "type": "string",
          "enum": [
            "timestamped",
            "overwrite"
          ]
        },
        "exclude": {
          "description": "Glob patterns to exclude globally (package.json search, prompt file/folder selection, variable file/folder selection). Always excluded (hardcoded): node_modules, dist, .git. Add custom exclusions as needed (e.g. [\"**/.pp/**\", \"**/.changeset/**\", \"**/out/**\", \"**/*.log\"])",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "variables": {
      "description": "Configuration variables",
      "type": "array",
      "items": {
        "description": "A configuration variable shown in the Variables view",
        "type": "object",
        "properties": {
          "name": {
            "description": "Unique identifier for the variable",
            "type": "string"
          },
          "kind": {
            "description": "Type of variable input",
            "type": "string",
            "enum": [
              "choose",
              "toggle",
              "input",
              "multi-select",
              "file",
              "folder"
            ]
          },
          "options": {
            "description": "Available options for choose/multi-select kinds",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "command": {
            "description": "Shell command to execute when value changes",
            "type": "string"
          },
          "description": {
            "description": "Human-readable description",
            "type": "string"
          },
          "default": {
            "description": "Default value",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "boolean"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "group": {
            "description": "Group name for organizing variables",
            "type": "string"
          },
          "multiSelect": {
            "description": "Enable multi-selection for file/folder kinds",
            "type": "boolean"
          },
          "excludes": {
            "description": "Glob patterns to exclude for file/folder kinds. Overrides global excludes",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "kind"
        ],
        "additionalProperties": false
      }
    },
    "replacements": {
      "description": "File replacements/patches",
      "type": "array",
      "items": {
        "description": "A file replacement/patch shown in the Replacements view",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "description": "Unique identifier for the replacement",
                "type": "string"
              },
              "description": {
                "description": "Human-readable description",
                "type": "string"
              },
              "group": {
                "description": "Group name for organizing replacements",
                "type": "string"
              },
              "type": {
                "description": "Replace entire file content",
                "type": "string",
                "const": "file"
              },
              "source": {
                "description": "Source file path relative to workspace",
                "type": "string"
              },
              "target": {
                "description": "Target file path relative to workspace",
                "type": "string"
              }
            },
            "required": [
              "name",
              "type",
              "source",
              "target"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "description": "Unique identifier for the replacement",
                "type": "string"
              },
              "description": {
                "description": "Human-readable description",
                "type": "string"
              },
              "group": {
                "description": "Group name for organizing replacements",
                "type": "string"
              },
              "type": {
                "description": "Apply patches to file",
                "type": "string",
                "const": "patch"
              },
              "target": {
                "description": "Target file path relative to workspace",
                "type": "string"
              },
              "patches": {
                "description": "List of search/replace patches",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "search": {
                      "description": "Text or pattern to search for",
                      "type": "string"
                    },
                    "replace": {
                      "description": "Replacement text",
                      "type": "string"
                    }
                  },
                  "required": [
                    "search",
                    "replace"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "name",
              "type",
              "target",
              "patches"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "tasks": {
      "description": "Executable tasks",
      "type": "array",
      "items": {
        "description": "A task that can be executed from the Tasks view",
        "type": "object",
        "properties": {
          "name": {
            "description": "Unique identifier for the task",
            "type": "string"
          },
          "command": {
            "description": "Shell command to execute",
            "type": "string"
          },
          "group": {
            "description": "Group name for organizing tasks",
            "type": "string"
          },
          "description": {
            "description": "Human-readable description shown as tooltip",
            "type": "string"
          },
          "inputs": {
            "description": "Inputs to collect before running the task",
            "type": "array",
            "items": {
              "description": "An input required before execution (used by prompts and tasks)",
              "type": "object",
              "properties": {
                "name": {
                  "description": "Variable name used in template as {{name}}",
                  "type": "string"
                },
                "type": {
                  "description": "Input type",
                  "type": "string",
                  "enum": [
                    "file",
                    "folder",
                    "text",
                    "number",
                    "confirm",
                    "choice",
                    "multichoice"
                  ]
                },
                "label": {
                  "description": "Label shown in the input dialog",
                  "type": "string"
                },
                "placeholder": {
                  "description": "Placeholder text for text/number inputs",
                  "type": "string"
                },
                "options": {
                  "description": "Available options for choice/multichoice types",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "multiSelect": {
                  "description": "Enable multi-selection for file/folder types",
                  "type": "boolean"
                },
                "excludes": {
                  "description": "Glob patterns to exclude for this input. Overrides global excludes",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "name",
                "type",
                "label"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "name",
          "command"
        ],
        "additionalProperties": false
      }
    },
    "tools": {
      "description": "Executable tools",
      "type": "array",
      "items": {
        "description": "A tool that can be executed from the Tools view",
        "type": "object",
        "properties": {
          "name": {
            "description": "Unique identifier for the tool",
            "type": "string"
          },
          "command": {
            "description": "Shell command to execute",
            "type": "string"
          },
          "group": {
            "description": "Group name for organizing tools",
            "type": "string"
          }
        },
        "required": [
          "name",
          "command"
        ],
        "additionalProperties": false
      }
    },
    "prompts": {
      "description": "Claude Code prompts",
      "type": "array",
      "items": {
        "description": "A prompt that can be executed in Claude Code",
        "type": "object",
        "properties": {
          "name": {
            "description": "Unique identifier for the prompt",
            "type": "string"
          },
          "file": {
            "description": "Path to prompt file relative to .pp/prompts/",
            "type": "string"
          },
          "group": {
            "description": "Group name for organizing prompts",
            "type": "string"
          },
          "description": {
            "description": "Human-readable description shown as tooltip",
            "type": "string"
          },
          "inputs": {
            "description": "Inputs to collect before running the prompt",
            "type": "array",
            "items": {
              "description": "An input required before execution (used by prompts and tasks)",
              "type": "object",
              "properties": {
                "name": {
                  "description": "Variable name used in template as {{name}}",
                  "type": "string"
                },
                "type": {
                  "description": "Input type",
                  "type": "string",
                  "enum": [
                    "file",
                    "folder",
                    "text",
                    "number",
                    "confirm",
                    "choice",
                    "multichoice"
                  ]
                },
                "label": {
                  "description": "Label shown in the input dialog",
                  "type": "string"
                },
                "placeholder": {
                  "description": "Placeholder text for text/number inputs",
                  "type": "string"
                },
                "options": {
                  "description": "Available options for choice/multichoice types",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "multiSelect": {
                  "description": "Enable multi-selection for file/folder types",
                  "type": "boolean"
                },
                "excludes": {
                  "description": "Glob patterns to exclude for this input. Overrides global excludes",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "name",
                "type",
                "label"
              ],
              "additionalProperties": false
            }
          },
          "saveOutput": {
            "description": "If true, save response to .pp/branches/{{branch}}/prompts/{{promptname}}.md",
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "file"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}