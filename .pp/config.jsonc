{
  "$schema": "../resources/schema.json",
  "settings": {
    "aiProvider": "claude",
    "exclude": [
      "**/.pp/**",
      "**/.changeset/**",
      "**/.ignore/**",
      "**/.github/**",
      "**/.husky/**",
      "**/dist-dev/**",
      "**/.tscanner/**",
      "**/.vscode/**",
      "**/out/**"
    ]
  },
  "branchContext": {
    "changedFiles": true,
    "tasks": true,
    "sections": [
      {
        "name": "GITHUB PR COMMENTS",
        "type": "auto",
        "provider": "node ./plugins/github-pr-comments.js",
        "icon": "github",
        "options": {
          "includeRegularComments": false,
          "includeReviewComments": true
        }
      },
      {
        "name": "LINEAR ISSUE",
        "type": "auto",
        "provider": "node ./plugins/linear-issue.js",
        "icon": "link-external"
      }
    ]
  },
  "variables": [
    {
      "name": "environment",
      "kind": "choose",
      "options": [
        "local",
        "local-staging",
        "local-prod",
        "staging",
        "prod"
      ],
      "command": "bash scripts/environment-select.sh",
      "description": "Select the target environment",
      "default": "local",
      "group": "Environment"
    },
    {
      "name": "debug",
      "kind": "toggle",
      "command": "bash scripts/toggle-debug.sh",
      "description": "Enable or disable debug mode",
      "default": false,
      "group": "Environment"
    },
    {
      "name": "api-url",
      "kind": "input",
      "command": "bash scripts/set-api-url.sh",
      "description": "Set the API base URL",
      "group": "API"
    },
    {
      "name": "features",
      "kind": "choose",
      "multiSelect": true,
      "options": [
        "auth",
        "analytics",
        "notifications",
        "dark-mode"
      ],
      "command": "bash scripts/set-features.sh",
      "description": "Enable feature flags",
      "default": [
        "auth"
      ],
      "group": "API"
    },
    {
      "name": "config-file",
      "kind": "file",
      "description": "Select a configuration file"
    },
    {
      "name": "output-dir",
      "kind": "folder",
      "description": "Select output directory"
    },
    {
      "name": "multiple-files",
      "kind": "file",
      "multiSelect": true,
      "description": "Select multiple files"
    },
    {
      "name": "multiple-folders",
      "kind": "folder",
      "multiSelect": true,
      "description": "Select multiple folders"
    }
  ],
  "replacements": [
    {
      "name": "enable-debug-logs",
      "type": "patch",
      "description": "Enable debug logging in hello1 view",
      "target": "src/extension.ts",
      "patches": [
        {
          "search": "void vscode.tasks.fetchTasks();",
          "replace": "// DEBUG ENABLED\n  void vscode.tasks.fetchTasks();"
        }
      ],
      "group": "Debug"
    }
  ],
  "tools": [],
  "tasks": [
    {
      "name": "list-files",
      "command": "ls -la",
      "group": "Utils"
    },
    {
      "name": "show-date",
      "command": "echo $DUMP_NAME && date",
      "group": "Utils",
      "inputs": [
        {
          "name": "DUMP_NAME",
          "label": "type the name of the dump",
          "type": "text",
          "placeholder": "name-of-the-dump"
        }
      ]
    }
  ],
  "prompts": [
    {
      "name": "Review Constants",
      "file": "prompts/review-constants.md",
      "description": "Review constants and suggest centralizing hardcoded values",
      "group": "Analysis",
      "inputs": [],
      "saveOutput": true
    }
  ]
}
