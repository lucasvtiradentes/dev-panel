{
  "settings": {
    "exclude": [
      "**/.devpanel/**",
      "**/.changeset/**",
      "**/.claude/**",
      "**/.ignore/**",
      "**/.github/**",
      "**/.husky/**",
      "**/dist-dev/**",
      "**/.tscanner/**",
      "**/.vscode/**",
      "**/out/**",
      "**/resources/**",
      "**/scripts/**",
      "**/docs/**"
    ]
  },
  "variables": [
    {
      "name": "environment",
      "kind": "choose",
      "options": ["local", "local-staging", "local-prod", "staging", "prod"],
      "command": "bash scripts/environment-select.sh",
      "description": "Select the target environment",
      "default": "local",
      "group": "Environment"
    },
    {
      "name": "debug",
      "kind": "toggle",
      "command": "bash scripts/toggle-debug.sh",
      "description": "Enable or disable debug mode",
      "default": false,
      "group": "Environment"
    },
    {
      "name": "api-url",
      "kind": "input",
      "command": "bash scripts/set-api-url.sh",
      "description": "Set the API base URL",
      "group": "API"
    },
    {
      "name": "features",
      "kind": "choose",
      "multiSelect": true,
      "options": ["auth", "analytics", "notifications", "dark-mode"],
      "command": "bash scripts/set-features.sh",
      "description": "Enable feature flags",
      "default": ["auth"],
      "group": "API"
    },
    {
      "name": "config-file",
      "kind": "file",
      "description": "Select a configuration file"
    },
    {
      "name": "output-dir",
      "kind": "folder",
      "description": "Select output directory"
    },
    {
      "name": "multiple-files",
      "kind": "file",
      "multiSelect": true,
      "description": "Select multiple files"
    },
    {
      "name": "multiple-folders",
      "kind": "folder",
      "multiSelect": true,
      "description": "Select multiple folders"
    }
  ],
  "replacements": [
    {
      "name": "enable-debug-logs",
      "type": "patch",
      "description": "Enable debug logging in hello1 view",
      "target": "src/extension.ts",
      "patches": [
        {
          "search": "void VscodeHelper.fetchTasks();",
          "replace": "// DEBUG ENABLED\n  void VscodeHelper.fetchTasks();"
        }
      ],
      "group": "Debug"
    }
  ],
  "tasks": [
    {
      "name": "list-files",
      "command": "ls -la",
      "group": "Utils",
      "hideTerminal": true
    },
    {
      "name": "show-date",
      "command": "echo $DUMP_NAME && date",
      "group": "Utils",
      "inputs": [
        {
          "name": "DUMP_NAME",
          "label": "type the name of the dump",
          "type": "text",
          "placeholder": "name-of-the-dump"
        }
      ]
    }
  ]
}
