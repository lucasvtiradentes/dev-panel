{
  "settings": {
    "exclude": [
      "**/.devpanel/**",
      "**/.changeset/**",
      "**/.claude/**",
      "**/.ignore/**",
      "**/.github/**",
      "**/.husky/**",
      "**/dist-dev/**",
      "**/.tscanner/**",
      "**/.vscode/**",
      "**/out/**",
      "**/registry/**",
      "**/resources/**",
      "**/scripts/**",
      "**/docs/**",
    ],
  },
  "branchContext": {
    "customSections": [
      {
        "name": "GH PR INFO",
        "label": "PR info",
        "type": "auto",
        "provider": "tsx ./plugins/github-pr-comments.ts",
        "icon": "github",
        "skipIfEmpty": ["PR LINK"],
        "options": {
          "includeRegularComments": false,
          "includeReviewComments": true,
        },
      },
      {
        "name": "LINEAR INFO",
        "label": "Linear info",
        "type": "auto",
        "provider": "tsx ./plugins/linear-info.ts",
        "icon": "link-external",
        "skipIfEmpty": ["LINEAR LINK"],
      },
    ],
  },
  "variables": [
    {
      "name": "environment",
      "kind": "choose",
      "options": ["local", "local-staging", "local-prod", "staging", "prod"],
      "command": "bash scripts/environment-select.sh",
      "description": "Select the target environment",
      "default": "local",
      "group": "Environment",
    },
    {
      "name": "debug",
      "kind": "toggle",
      "command": "bash scripts/toggle-debug.sh",
      "description": "Enable or disable debug mode",
      "default": false,
      "group": "Environment",
    },
    {
      "name": "api-url",
      "kind": "input",
      "command": "bash scripts/set-api-url.sh",
      "description": "Set the API base URL",
      "group": "API",
    },
    {
      "name": "features",
      "kind": "choose",
      "multiSelect": true,
      "options": ["auth", "analytics", "notifications", "dark-mode"],
      "command": "bash scripts/set-features.sh",
      "description": "Enable feature flags",
      "default": ["auth"],
      "group": "API",
    },
    {
      "name": "config-file",
      "kind": "file",
      "description": "Select a configuration file",
    },
    {
      "name": "output-dir",
      "kind": "folder",
      "description": "Select output directory",
    },
    {
      "name": "multiple-files",
      "kind": "file",
      "multiSelect": true,
      "description": "Select multiple files",
    },
    {
      "name": "multiple-folders",
      "kind": "folder",
      "multiSelect": true,
      "description": "Select multiple folders",
    },
  ],
  "replacements": [
    {
      "name": "enable-debug-logs",
      "type": "patch",
      "description": "Enable debug logging in hello1 view",
      "target": "src/extension.ts",
      "patches": [
        {
          "search": "void VscodeHelper.fetchTasks();",
          "replace": "// DEBUG ENABLED\n  void VscodeHelper.fetchTasks();",
        },
      ],
      "group": "Debug",
    },
  ],
  "tools": [],
  "tasks": [
    {
      "name": "list-files",
      "command": "ls -la",
      "group": "Utils",
      "hideTerminal": true,
    },
    {
      "name": "show-date",
      "command": "echo $DUMP_NAME && date",
      "group": "Utils",
      "inputs": [
        {
          "name": "DUMP_NAME",
          "label": "type the name of the dump",
          "type": "text",
          "placeholder": "name-of-the-dump",
        },
      ],
    },
  ],
  "prompts": [
    {
      "name": "Review Constants",
      "file": "prompts/review-constants.md",
      "description": "Review constants and suggest centralizing hardcoded values",
      "group": "Analysis",
      "inputs": [],
      "saveOutput": true,
    },
    {
      "name": "TypeSafety Review",
      "file": "prompts/typesafety-review.md",
      "description": "Analyze type safety issues and suspicious code patterns",
      "group": "Analysis",
      "inputs": [
        {
          "name": "FOLDERS",
          "label": "Folders to analyze (comma-separated)",
          "type": "folder",
          "multiSelect": true,
          "placeholder": "select folders",
        },
      ],
      "saveOutput": true,
    },
  ],
}
